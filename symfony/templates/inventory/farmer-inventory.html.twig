{% extends "base.html.twig" %} 
{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Inventory By Farmer</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            {{include('inventory/_main-form.html.twig')}}
        </div>
    </div>
    <br><br>
    <div class="row">
        <div class="col-8">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h5">Inventory update over time</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                
                        <a href="">
                            <button onclick="window.print()" type="button" class="btn btn-sm btn-outline-secondary">
                                Print PDF
                            </button>
                        </a>
                        <a href="">
                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                Export CSV
                            </button>
                        </a>
                    </div>
                </div>
            </div>
            <div class="p-5">
            {{ render_chart(inventory_time_line, {'id': 'inventory_time_line','name' :'inventory_time_line'}) }}
            </div>
        </div>
        <div class="col-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h5">Quantity (Kg) of inventory update over time</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                </div>
            </div>
            <div class="p-5">
            {{render_chart(inventory_quantity,{'id': 'inventory_quantity','name' :'inventory_quantity'})}}
            </div>
        
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h5">Mayani inventory request over time</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                
                        <a href="">
                            <button onclick="window.print()" type="button" class="btn btn-sm btn-outline-secondary">
                                Print PDF
                            </button>
                        </a>
                        <a href="">
                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                Export CSV
                            </button>
                        </a>
                    </div>
                </div>
            </div>
            <div class="p-5">
                {{ render_chart(b2c_time_line, {'id': 'b2c_time_line','name' :'b2c_time_line'}) }}
            </div>
        </div>
        <div class="col-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h5">Quantity (Kg) of inventory on Mayani</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                </div>
            </div>
            <div class="p-5">
            {{render_chart(quantity_on_mayani,{'id': 'quantity_on_mayani','name' :'quantity_on_mayani'})}}
            </div>
        
        </div>
    </div>

    <section class="bg-light">
        <div class="container cwidth"> 
            <div class="align-items-center justify-content-center row background-info">
                                <h3 class="value-title">Farmer Current Inventory</h3>
                    {# <div class="col-lg-3 col-sm-6 pb-3 pt-3">
                        <div class="align-items-center d-flex text-dark">
                            <div class="padding-info align-items-center">
                            </div>
                        </div>
                    </div> #}
                {% for inventory in real_inventory %}
                    <div class="col-lg-3 col-sm-6 pb-3 pt-3">
                        <div class="align-items-center d-flex text-dark">
                            <img src="{{ asset('images/icon-polling-station.png') }}" class="d-inline-block align-top img-fluid" alt="">
                            <div class="padding-info align-items-center">
                                <h2 class="value-info">{{inventory.inventoryTotalKg}} Kg</h2>
                                <p class="title-info">{{inventory.productName}}</p>
                                <p class="title-info">Total Value: ${{inventory.inventoryTotalCredit}}</p>
                            </div>
                        </div>                         
                    </div>
                {% endfor %} 
            </div>                 
        </div>
    </section>

    <div class="row">
        <div class="col">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h5">Farmer Inventory (Kg)</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                </div>
            </div>
            <div class="p-5">
            {{render_chart(real_inventory_time_line,{'id': 'real_inventory_time_line','name' :'real_inventory_time_line'})}}
            </div>
        
        </div>
    </div>

    


     <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h5>Inventory Update Table</h5>
        <div class="btn-toolbar mb-2 mb-md-0">
            
        </div>
    </div>
    <div class="table-responsive">
        {{include('inventory/_table-farmer-inventory.html.twig')}}
    </div>



    
    
    
{% endblock %}  
  
